                <Label FontSize="Small" Text="" Margin="10" VerticalOptions="Center" HorizontalOptions="Center"></Label>
            </StackLayout >
            <StackLayout>
                <Label FontSize="Medium" FontAttributes="Bold" Text="Authers" Margin="5,5,0,0"  TextColor="#212121" ></Label>
                <Label FontSize="Medium" Text="Integratered Computer Technologies" Margin="10,0,0,0"  TextColor="#757575" ></Label>

